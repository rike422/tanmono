{
  "extends": "semistandard-react",
  "parser": "babel-eslint",
  "globals": {
    "describe": true,
    "context": true,
    "it": true
  },
  "plugins": [
    "import"
  ],
  "settings": {
    "import/resolver": "webpack"
  },
  "rules": {
    "semistandard-react/no-unused-prop-types": [1],
    "new-cap": [ 1, { "capIsNew": false } ], // For es7/decorators
  },
  "parserOptions": {
    "ecmaVersion": 7
  }
}
